<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/app.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--    <logger name="app" level="debug">-->
    <!--        <appender-ref ref="FILE" />-->
    <!--    </logger>-->

    <root level="info">
        <appender-ref ref="FILE"/>
    </root>
</configuration>